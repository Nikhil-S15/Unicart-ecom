

<div class="card mb-4">
  <!-- card-header end -->
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover" id="productsTable">
       
        <form
        action="/admin/add_banner"
        method="post"
        enctype="multipart/form-data"
        id="myform"
      >
        <label for="">Title</label>
        <input
          type="text"
          name="title"
          class="form-control"
          id="title"
          onkeyup="titleValidation()"
        />
        <span id="title-error" class="validation-label"></span>
        <br />

        <label for="">Description</label>
        <input
          type="text"
          name="description"
          class="form-control"
          id="description"
          onkeyup="descriptionValidation()"
        />
        <span id="description-error" class="validation-label"></span>
        <br />

        <label for="">Image</label>
        <input type="file" name="image" class="form-control" required />
        <button
          type="submit"
          class="btn btn-info text-white text-center mt-4"
        >
          Submit
        </button>
      </form>
         
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>

<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
