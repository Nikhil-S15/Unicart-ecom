<main class="main " >
    <section class="home-slider position-relative pt-50">
        <div class="hero-slider-1 dot-style-1 dot-style-1-position-1">
    
      
            <% bannerData.forEach(function(bannerData) { %>
              <div class="single-hero-slider single-animation-wrap">
                <div class="container">
                    <div class="row align-items-center slider-animated-1">
                        <div class="col-lg-5 col-md-6">
                            <div class="hero-slider-content-2">
                                <h2 class="animated fw-900"><%=bannerData.title%></h2>
                                <h4 class="animated fw-900"><%=bannerData.description%></h4>
                                <!-- <h1 class="animated fw-900 text-brand">On all products</h1>
                                <p class="animated">Save more with coupons & up to 70% off</p> -->
                                <a class="animated btn btn-brush btn-brush-3" href="/shop"> Shop Now </a>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-6">
                            <div class="single-slider-img single-slider-img-1">
                                <img class="animated slider-1-1" src="/uploads/<%=bannerData.image %>" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
              
            <% }) %>
       
          
         
        
        </div>
        <div class="slider-arrow hero-slider-1-arrow"></div>
    </section>
    
    <section class="section-padding">
        <div class="container wow fadeIn animated">
            <h3 class="section-title mb-20"><span>New</span> Arrivals</h3>
            <div class="carausel-6-columns-cover position-relative">
                <div class="slider-arrow slider-arrow-2 carausel-6-columns-arrow" id="carausel-6-columns-2-arrows">
                </div>
                <div class="carausel-6-columns carausel-arrow-center" id="carausel-6-columns-2">
                   
          <% newlyAdded.forEach(function(product) { %> 
                    <div class="product-cart-wrap small hover-up">
                        <div class="product-img-action-wrap">
                            <div class="product-img product-img-zoom">
                                <a href="/product-detail?id=<%= product._id%>">
                                    <img class="default-img" src="/uploads/<%=product.img[0]%>" alt="">
                                    <img class="hover-img" src="/uploads/<%=product.img[0]%>" alt="">
                                </a>
                            </div>
                            <div class="product-action-1">
                               
                                <a aria-label="Add To Wishlist" class="action-btn small hover-up"
                                    href="shop-wishlist.html" tabindex="0"><i class="fi-rs-heart"></i></a>
                             
                            </div>
                            <div class="product-badges product-badges-position product-badges-mrg">
                                <span class="hot">Hot</span>
                            </div>
                        </div>
                        <div class="product-content-wrap">
                            <h2><a href="/product-detail?id=<%= product._id%>">  <%=product.name%></a></h2>
                            <div class="rating-result" title="90%">
                                <span>
                                </span>
                            </div>
                            <div class="product-price">
                                <span>â‚¹<%= product.price %> </span>
                               
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <!--End product-cart-wrap-2-->
                  
                    <!--End product-cart-wrap-2-->
                </div>
            </div>
        </div>
    </section>
    <section class="deals section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 deal-co">
                    <div class="deal wow fadeIn animated mb-md-4 mb-sm-4 mb-lg-0"
                        style="background-image: url('assets/imgs/down/IMAGE-landscape-fill-a78d8a0a-5d15-488e-b801-c312c679e417-default_0.jpg');">
                        <div class="deal-top">
                            <h2 class="text-brand" style="color: white;">WOMEN CLOTHING</h2>
                       
                        </div>
                        <div class="deal-content">
                            <h6 class="product-title"><a href="/products-women">
                                    </a></h6>
                      
                        </div>
                        <div class="deal-bottom">
                           
                       
                            <a href="/products-women" class="btn hover-up">Shop Now <i
                                    class="fi-rs-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 deal-co">
                    <div class="deal wow fadeIn animated"
                        style="background-image: url('assets/imgs/down/IMAGE-landscape-fill-7c8c1a5b-ce41-46df-94ea-8f45d2bd772f-default_0.jpg');">
                        <div class="deal-top">
                            <h2 class="text-brand">MEN CLOTHING</h2>
                         
                        </div>
                        <div class="deal-content">
                           
                            
                        </div>
                        <div class="deal-bottom">
                         
                         
                            <a href="/products-men" class="btn hover-up">Shop Now <i
                                    class="fi-rs-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
   
</main>